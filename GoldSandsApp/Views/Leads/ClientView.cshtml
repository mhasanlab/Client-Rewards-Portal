@model GoldSandsApp.Models.Entities.Leads
@{
    ViewData["Title"] = "ClientView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-capitalize text-center text-white">Details View As Client</h1>

<div>
    <h4 class="bg">Details of @Model.ClientName</h4>
    <hr />

    <div class="row">
        <div class="col-6">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ClientName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ClientName)
            </dd>
        </div>
        <div class="col-6">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ClientAddress)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ClientAddress)
            </dd>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ClientPhone)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ClientPhone)
            </dd>
        </div>
        <div class="col-6">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ClientEmail)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ClientEmail)
            </dd>
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.OccupationId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Occupation.OccupationName)
            </dd>
        </div>

        <div class="col-6">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Designation)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Designation)
            </dd>
        </div>

    </div>


