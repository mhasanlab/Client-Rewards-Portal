@model GoldSandsApp.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="~/Assets/images/icon/goldsands-logo-3.png" alt="GoldSands">
                        </a>
                    </div>
                    <div class="login-form">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="au-input au-input--full" asp-for="Username" type="text" placeholder="Enter Your Email Address">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input class="au-input au-input--full" asp-for="Password" type="password" placeholder="Enter Your Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>

                        </form>
                        <div class="register-link">
                            <p>
                                Don't have any account?
                                <a asp-action="SignUp" asp-controller="Account">Sign Up Here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



